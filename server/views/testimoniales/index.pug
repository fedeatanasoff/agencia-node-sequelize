extends ../layout/index
block content
    main.container.mt-5
        h1.text-center.mb-5 #{title.toUpperCase()}
        //- testimoniales aqui
        .row
            
        .row
            .col-md-12
                .row.justify-content-center
                    .col-md-8
                        form(action="/testimoniales", method="post")
                            .form-group
                                input(type="text", id="nombre", name="nombre", class="form-control", placeholder="ingresa tu nombre", value=nombre)
                            .form-group
                                input(type="email", id="email", name="email", class="form-control", placeholder="ingresa tu email", value=email)
                            .form-group
                                textarea(id="mensaje", name="mensaje", class="form-control", placeholder="ingresa tu mensaje", rows="5")=mensaje
                            if(errores)
                                each error in errores
                                    .alert.alert-danger.text-center=error.mensaje
                            input.btn.btn-success.btn-block(type="submit", value="Enviar")